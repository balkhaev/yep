{
  "name": "yep",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "ai": "^6.0.3"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:desktop": "turbo -F desktop dev",
    "build:gui": "turbo -F desktop build:gui",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @yep/db db:push",
    "db:studio": "turbo -F @yep/db db:studio",
    "db:generate": "turbo -F @yep/db db:generate",
    "db:migrate": "turbo -F @yep/db db:migrate",
    "db:local": "turbo -F @yep/db db:local",
    "publish:patch": "turbo -F yep-mem publish:patch",
    "publish:minor": "turbo -F yep-mem publish:minor",
    "publish:major": "turbo -F yep-mem publish:major",
    "test": "turbo test",
    "check": "ultracite check",
    "fix": "ultracite fix"
  },
  "dependencies": {
    "@yep/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@types/bun": "catalog:",
    "@yep/config": "workspace:*",
    "lefthook": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.2.3"
  },
  "packageManager": "bun@1.3.3"
}
